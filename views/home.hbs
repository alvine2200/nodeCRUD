<div class="row">
  <div class="col-md-12 mt-3 mb-3">
    <a href="/addUser" type="button" class="btn btn-primary float-end">Add User</a>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      {{#each rows}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.first_name}}</td>
          <td>{{this.last_name}}</td>
          <td>{{this.email}}</td>
          <td>{{this.phone}}</td>
          <td class="p-2">
            <a href="#" class="btn btn-primary">
              <i class="bi bi-eye"></i>
              View</a>
            |
            <a href="/edit_user/{{this.id}}" class="btn btn-warning">
              <i class="bi bi-pencil"></i>
              Edit</a>
            |
            <a href="#" class="btn btn-danger">
              <i class="bi bi-archive-fill"></i>
              Delete</a>
          </td>
        </tr>
      {{/each}}
    </tbody>

  </table>
</div>