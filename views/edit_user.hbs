<div class="container">
  <div class="row">

    {{#if alert}}
      <div role="alert" class="alert alert-success alert-dismissable fade show">
        <strong>{{alert}}</strong>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
    {{/if}}
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <h4>Edit User</h4>
          <a href="/" class="btn btn-primary float-end">Back</a>
        </div>
      </div>

      <div class="card-body">
        <div class="form-group">
          {{#each rows}}
            <form action="/update_user/{{this.id}}" method="post">
              <div class="row">
                <div class="col-md-6 mb-3">
                  <label for="first_name">First Name</label>
                  <input
                    type="text"
                    value="{{this.first_name}}"
                    name="first_name"
                    class="form-control"
                  />
                </div>
                <div class="col-md-6 mb-3">
                  <label for="last_name">Last Name</label>
                  <input
                    type="text"
                    value="{{this.last_name}}"
                    name="last_name"
                    class="form-control"
                  />
                </div>
                <div class="col-md-6 mb-3">
                  <label for="email">Email</label>
                  <input
                    type="text"
                    value="{{this.email}}"
                    name="email"
                    class="form-control"
                  />
                </div>
                <div class="col-md-6 mb-3">
                  <label for="phone">Phone Number</label>
                  <input
                    type="number"
                    value="{{this.phone}}"
                    name="phone"
                    class="form-control"
                  />
                </div>
                <div class="col-md-12 mb-3">
                  <button
                    type="submit"
                    class="form-control btn btn-primary float-end"
                  >Update User</button>
                </div>
              </div>
            </form>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>